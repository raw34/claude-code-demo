# 环境变量配置模板
# 复制此文件为 .env 并修改相应的值

# 数据库配置
# Docker环境使用服务名，本地开发使用 localhost
DB_HOST=database        # Docker: database, 本地: localhost
DB_PORT=3306
DB_USER=userapp
DB_PASSWORD=userpassword
DB_NAME=user_db

# Redis配置
# Docker环境使用服务名，本地开发使用 localhost
REDIS_HOST=redis        # Docker: redis, 本地: localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispassword

# MySQL Root密码（仅Docker Compose使用）
DB_ROOT_PASSWORD=rootpassword

# JWT配置
JWT_SECRET=your-secret-key-here

# 服务器配置
API_PORT=8080
GIN_MODE=release        # debug, release, test